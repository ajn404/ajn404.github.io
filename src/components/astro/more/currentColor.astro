<!-- 按钮组件 -->
<button class="primary-button">
  <svg class="icon" width="100" height="100" viewBox="0 0 100 100">
    <circle cx="50" cy="50" r="25"></circle>
  </svg>
  Click Me
</button>

<style>
  .primary-button {
    color: #007bff; /* 初始主色 */
    background: currentColor; /* 背景色 = 主色 */
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    animation: colorChange 5s infinite; /* 添加动画 */
  }
  .primary-button .icon {
    margin-right: 8px;
  }
  .primary-button .icon circle {
    fill: currentColor; /* SVG 颜色 = 按钮主色 */
    filter:hue-rotate(90deg);
  }
  /* 定义动画 */
  @keyframes colorChange {
    0% {
      color: #007bff; /* 蓝色 */
    }
    33% {
      color: #28a745; /* 绿色 */
    }
    66% {
      color: #ffc107; /* 黄色 */
    }
    100% {
      color: #007bff; /* 回到蓝色 */
    }
  }
</style>
