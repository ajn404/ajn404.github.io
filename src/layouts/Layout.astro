---
import { SITE } from "@config";
import "@styles/base.css";
import "@styles/header.scss";

import "driver.js/dist/driver.css";
import "@styles/components.scss";
import Header from "@components/astro/UI/Header.astro";
import "./KeySearch.astro";
import { Toaster } from "@shadcn/ui/sonner";
const googleSiteVerification =
  import.meta.env.PUBLIC_GOOGLE_SITE_VERIFICATION ||
  "oiTGKD7piiaRlZMEPHyQRioUB3lwoLNll7yZPPG7gEg";

export interface Props {
  title?: string;
  author?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
  activeNav?: "posts" | "tags" | "about" | "search" | "fantastic";
}

const {
  title = SITE.title,
  author = SITE.author,
  description = SITE.desc,
  ogImage = SITE.ogImage,
  canonicalURL = new URL(Astro.url.pathname, Astro.site).href,
  activeNav = "",
} = Astro.props;

const socialImageURL = new URL(
  ogImage ? ogImage : SITE.ogImage,
  Astro.url.origin
).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href=`/favicon.svg` />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <link rel="sitemap" href=`sitemap-index.xml` />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />

    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,400;0,500;0,600;0,700;1,400;1,600&display=swap"
      rel="stylesheet"
    /> -->

    {
      googleSiteVerification && (
        <meta
          name="google-site-verification"
          content={googleSiteVerification}
        />
      )
    }
    <script is:inline src=`/toggle-theme.js`></script>
  </head>
  <body class="top-[100px]">
    {activeNav && <Header activeNav={activeNav} />}
    <slot />
    <Toaster client:load />
    <div data-live2d-container></div>
  </body>

  <script src="./importTwElement"></script>
  <script src="./defineEvents"></script>

  <script>
    const width = window.innerWidth;
    if (width < 768) {
      // 添加一个被动事件监听器
      window.addEventListener(
        "touchstart",
        function () {
          import("eruda").then(module => {
            const eruda = module.default;
            eruda.init();
          });
        },
        { passive: true }
      );
    }
  </script>
</html>
